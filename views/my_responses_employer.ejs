<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Отклики на вакансии</title>
    <link rel="stylesheet" href="/assets/css/style_common.css">
    <link rel="stylesheet" href="/assets/css/style_responses.css">
</head>

<body>
    <div class="wrapper">
        <div class="container">
            <%- include('partials/header') %>

                <main>
                    <!-- Условный блок для кандидата -->
                    <section class="responses-section candidate-view">
                        <h2>Ваши отклики</h2>
                        <div class="responses-list">
                            <div class="response" id="response-1">
                                <h3>Вакансия: Веб-разработчик</h3>
                                <p><strong>Компания:</strong> IT Company</p>
                                <p><strong>Статус:</strong> Ожидает рассмотрения</p>
                                <p><strong>Дата отклика:</strong> 2023-10-01</p>
                            </div>
                            <div class="response" id="response-2">
                                <h3>Вакансия: Дизайнер</h3>
                                <p><strong>Компания:</strong> Design Studio</p>
                                <p><strong>Статус:</strong> Принят</p>
                                <p><strong>Дата отклика:</strong> 2023-09-28</p>
                            </div>
                        </div>
                        <div class="no-responses-message">Откликов пока нет.</div>
                    </section>

                    <!-- Условный блок для работодателя -->
                    <section class="responses-section employer-view">
                        <h2>Отклики на ваши вакансии</h2>
                        <% if (vacancies && vacancies.length > 0) { %>
                            <% vacancies.forEach(function(vacancy) { %>
                                <div class="vacancy">
                                    <h3>Вакансия: <%= vacancy.title %></h3>
                                    <p>ID: <%= vacancy.vacancy_id %></p>
                                    <p>Описание: <%= vacancy.description %></p>
                
                                    <h4>Кандидаты</h4>
                                    <% if (vacancy.candidates && vacancy.candidates.length > 0) { %>
                                        <% vacancy.candidates.forEach(function(candidate, index) { %>
                                            <div class="response" id="response-<%= index %>">
                                                <p><strong>Кандидат:</strong> <%= candidate.first_name %> <%= candidate.last_name %></p>
                                                <p>ID: <%= candidate.candidate_id %></p>
                                                <p>Email: <%= candidate.email %></p>
                                                <p>Телефон: <%= candidate.phone %></p>
                                                <p><strong>Статус:</strong> 
                                                    <% if (candidate.application && candidate.application.status === 'pending') { %>
                                                        Ожидает рассмотрения
                                                    <% } else { %>
                                                        Принят
                                                    <% } %>
                                                </p>
                                                <p><strong>Дата отклика:</strong> <%= candidate.application ? candidate.application.applied_at : 'Не указано' %></p>
                                                <div class="response-actions">
                                                    <button class="accept-button">Принять</button>
                                                    <button class="reject-button" onclick="rejectResponse('response-<%= index %>')">Отклонить</button>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <p>Нет кандидатов для этой вакансии.</p>
                                    <% } %>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <h2>Откликов пока нет.</h2>
                        <% } %>
                    </section>
                </main>
        </div>
    </div>

    <%- include('partials/footer') %>

        <script>
            function rejectResponse(responseId) {
                const responseElement = document.getElementById(responseId);
                if (responseElement) {
                    responseElement.remove();
                    checkForResponses();
                }
            }

            function checkForResponses() {
                const responsesSections = document.querySelectorAll('.responses-section');
                responsesSections.forEach(section => {
                    const responsesList = section.querySelector('.responses-list');
                    const noResponsesMessage = section.querySelector('.no-responses-message');
                    if (responsesList.children.length === 0) {
                        noResponsesMessage.style.display = 'block';
                    } else {
                        noResponsesMessage.style.display = 'none';
                    }
                });
            }

            // Проверка при загрузке страницы
            document.addEventListener('DOMContentLoaded', checkForResponses);
        </script>
</body>

</html>