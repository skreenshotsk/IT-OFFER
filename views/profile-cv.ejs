<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мои резюме</title>
    <link rel="stylesheet" href="assets/css/style_common.css">
    <link rel="stylesheet" href="assets/css/style_profile-cv.css">
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <%- include('partials/header') %>
            
            <main>
                <section class="profile-cv-section">
                    <h3>Мои резюме</h3>
                    <div id="cvList" class="cv-list">
                        <% resumes.forEach(function(resume) { %>
                            <div class="resume" data-salary="<%= resume.expected_salary %>" data-skills="<%= resumeSkills.filter(skill => skill.vacancy_id === vacancy.vacancy_id).map(skill => skill.skill_name).join(',') %>">
                                <h3><%= vacancy.title %></h3>
                                <p>Фамилия: <%= user.last_name %></p>
                                <p>Имя: <%= user.first_name %></p>
                                <p>Образование: <%= user.last_name %></p>   
                                <p>Ключевые навыки: </p>
                                <% vacancySkills.filter(skill => skill.vacancy_id === vacancy.vacancy_id).forEach(function(skill) { %>
                                    <p><%= skill.skill_name %></p>
                                <% }) %>
                                <div class="extended-description" style="display: none;">
                                    <p>Расширенное описание:</p>
                                    <p><%= vacancy.extended_description || 'Не указано' %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                </section>
            </main>
        </div>
    </div>

    <%- include('partials/footer') %>
    
</body>
</html>